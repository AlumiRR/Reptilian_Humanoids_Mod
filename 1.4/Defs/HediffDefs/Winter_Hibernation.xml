<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>Hediff_Winter_Hibernation</defName>
		<label>winter hibernation</label>
		<description>A state, when creature's body slows down it's processes in cold to preserve life.</description>
		<hediffClass>ReptilianHumanoidsMod.Hediff_Winter_Hibernation</hediffClass>
		<maxSeverity>1</maxSeverity>
		<initialSeverity>0.1</initialSeverity>
		<defaultLabelColor>(0.8, 0.8, 1)</defaultLabelColor>
		<stages>
			<li>
				<label>normal</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<label>little sleepy</label>
				<minSeverity>0.2</minSeverity>
				<hungerRateFactorOffset>-0.1</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.15</offset>
					</li>
				</capMods>
				<statFactors>
					<RestFallRateFactor>1.8</RestFallRateFactor>
				</statFactors>
			</li>
			<li>
				<label>sleepy</label>
				<minSeverity>0.5</minSeverity>
				<hungerRateFactorOffset>-0.3</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.4</offset>
					</li>
				</capMods>
				<statFactors>
					<RestFallRateFactor>3</RestFallRateFactor>
				</statFactors>
			</li>
			<li>
				<label>hibernation</label>
				<minSeverity>0.9</minSeverity>
				<hungerRateFactorOffset>-0.95</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.01</setMax>
					</li>
				</capMods>
				<statFactors>
					<RestFallRateFactor>100</RestFallRateFactor>
				</statFactors>
			</li>
		</stages>
	</HediffDef>
</Defs>